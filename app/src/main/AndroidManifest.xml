<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jwhh.notekeeper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <permission
        android:name="my.own.permission"
        android:protectionLevel="signature" />
    <permission
        android:name="my.read.permission"
        android:protectionLevel="normal" />
    <permission
        android:name="my.write.permission"
        android:protectionLevel="normal" />

    <application
        android:name=".presentation.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.ListNationsActivity" android:label="Natios"></activity>

        <service
            android:name="com.jwhh.notekeeper.presentation.services.MyBoundService"
            android:exported="false" />
        <service
            android:name="com.jwhh.notekeeper.presentation.services.MyMessengerService"
            android:exported="false"
            android:process=":my_own_process" />

        <activity
            android:name=".presentation.news.NewsActivity"
            android:label="@string/news" />
        <activity android:name=".presentation.MyContentProviderActivity"  android:label="@string/content_provider" />
        <activity android:name=".presentation.MyBroadcastReceiverActivity" android:label="@string/broadcast_receivers" />
        <activity android:name=".presentation.MyServiceActivity" android:label="@string/services" />
        <activity
            android:name=".presentation.SurveyActivity"
            android:label="@string/title_activity_survey" />
        <activity android:name=".presentation.ListDogActivity" android:label="@string/dogs" />
        <activity
            android:name=".presentation.ListCourseNotesActivity"
            android:label="@string/title_activity_list_course_notes"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.MainActivity"
            android:label="Edit Note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.NoteListActivity"
            android:label="Notes"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name="com.jwhh.notekeeper.presentation.receivers.MyFirstReceiver">
            <intent-filter android:priority="10">
                <action android:name="my.custom.action.name" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.jwhh.notekeeper.presentation.receivers.MySecondReceiver">
            <intent-filter android:priority="20">
                <action android:name="my.custom.action.name" />
            </intent-filter>
        </receiver>
        <receiver android:name=".presentation.MyBroadcastReceiverActivity$MyThirdReceiverInner">
            <intent-filter android:priority="30">
                <action android:name="my.custom.action.name" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.jwhh.notekeeper.presentation.receivers.MyFourthReceiver">
            <intent-filter>
                <action android:name="my.custom.action.name" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.jwhh.notekeeper.presentation.receivers.MyReceiver" />
        <receiver android:name="com.jwhh.notekeeper.presentation.receivers.IncomingReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".data.NationProvider"
            android:authorities="com.jwhh.notekeeper.data.NationProvider"
            android:exported="true"
            android:readPermission="my.read.permission"
            android:writePermission="my.write.permission" />
    </application>

</manifest>